(defsrc
    esc
    caps
    lsft
    rsft
)

(defvar
    tap 200
    hld 200
)

(defalias
    escapers grv
    ;; capslock lctl
    ;; capslock (tap-dance $tap (lctl esc))
    capslock (multi f24 (tap-hold $tap $hld esc lctl))
    clicksft (one-shot $tap lsft)
    clocksft (one-shot $tap rsft)
)

(deflayer base
    @escapers
    @capslock
    @clicksft
    @clocksft
)
