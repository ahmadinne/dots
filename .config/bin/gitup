#!/bin/bash
choice=$1
if [ -n "$choice" ]; then
    lastcommit=$(git show --summary | awk 'NR==5' | sed 's/    //')
	lastbranch=$(git status | grep On | awk '{print $3}')
    git add $choice || exit
    echo ""
    echo "[Last Commit]"
    echo "> $lastcommit"

    echo ""
    echo "[Commit Message]"
    read -p ": " commitmsg
    if [ -n "$commitmsg" ]; then
        git commit -m "$commitmsg"
    else
        git commit -m "$lastcommit"
    fi

    echo ""
    echo "[Branch to Push]"
    read -p ": " branches
    if [ -n "$branches" ]; then
        git push -u origin $branches
    else
        git push -u origin $lastbranch
    fi
else
    echo "Please include files you want to add, or type '.' for all"
fi
